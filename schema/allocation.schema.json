{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Shepherd Partner Allocation",
    "description": "The schema for Allocation Configuration of Partners for Shepherd.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "pattern": "^(SOV-)([0-9]{4})(0[1-9]|1[0-2])(0[1-9]|[1-2][0-9]|3[0-1])(2[0-3]|[01][0-9])([0-5][0-9])([0-5][0-9])$",
            "description": "Allocation Update Title Label. SOV-<UTC datetime:YYYYMMDDHHMMSS>",
            "type": "string",
            "additionalProperties": false
        },
        "allocations": {
            "type": "array",
            "description": "Allocations distributing partner percentages for each tile, left to right.",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "position": {
                        "type": "integer",
                        "description": "0-based position of tile from left side, 0 for the first slot.",
                        "minimum": 0,
                        "exclusiveMaximum": 6
                    },
                    "allocation": {
                        "type": "object",
                        "patternProperties": {
                            "^adm$": {
                                "description": "Percentage of allocation to adM partner 0 - 100.",
                                "uniqueItems": true,
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 100
                            },
                            "^kevel$": {
                                "description": "Percentage of allocation to Kevel partner 0 - 100.",
                                "uniqueItems": true,
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 100
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "required": [
                    "position",
                    "allocation"
                ]
            }
        }
    },
    "required": [
        "name",
        "allocations"
    ]
}